<div class="card mb-2" style="width: 42rem;">
  <div class="card-body">
    <!--投稿内容表示-->
    <h5 class="card-title">
      <%= @teacher_post.field %>:
      <% if @teacher_post.status == "受付中" %>
        <span class="text-primary"><%= @teacher_post.status %></span>
      <% else %>
        <span class="text-danger"><%= @teacher_post.status %></span>
      <% end %>
      <% if @teacher_post.user == current_user %>
      <%= link_to "編集する",  edit_student_post_path(@teacher_post) ,class:"btn btn-primary btn-sm ml-5" %>
      <% else %>
      <%= link_to "連絡を取る", user_path(@teacher_post.user) ,class:"btn btn-primary btn-sm ml-5" %>
      <% end %>
    </h5>
    <p class="card-text"><%= @teacher_post.body %></p>
    <div class="text-muted mb-1">
     <span>条件:<%= @teacher_post.title %>

       <div class="favorite-<%= @teacher_post.id %>">
         <!--いいね機能 非同期化してます-->
          <%= render 'favorite_teachers/favorite', teacher: @teacher_post %>
       </div>
     </span>
    </div>
    <!--コメント表示機能-->
    <div class="comment-<%= @teacher_post.id %>">
      <%= render 'comment_teachers/comment', teacher: @teacher_post %>
    </div>
    <!--コメント投稿機能-->
    <div class="commnt-student-make border-top pt-3">
      <%= form_with(model:[@teacher_post, @comment_teacher], remote:true) do |f| %>
      <%= f.text_area :comment, size:"50x1", class:"inputComment" %><br>
      <%= f.submit "コメント", class:"btn btn-light" %>
      <% end %>
    </div>
  </div>
</div>