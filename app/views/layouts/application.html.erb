<!DOCTYPE html>
<html>
  <head>
    <title class="text-blue">MeetSnow</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name ="viewport" content="width=device-width, initial-scale=1, maximim-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-white border-bottom border-info">
        <div class="container">
          <a class="navbar-brand text-info" href="/">
            <span>Meet snow</span>
          </a>
          <div>
           <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li>
              <%= link_to student_posts_path, class:"nav-link" do %>
              <span class="fas fa-baby link"> Student</span>
              <% end %>
            </li>
            <li>
              <%= link_to teacher_posts_path, class:"nav-link" do %>
              <span class="fas fa-user-graduate link" > Teacher</span>
              <% end %>
            </li>
            <li>
              <%= link_to favorites_users_path(current_user), class:"nav-link" do %>
              <span class="fas fa-heart link "style="font-size: 1.5em;"> </span>
              <% end %>
            </li>
            <li>
              <%= link_to evaluations_path, class:"nav-link" do %>
              <span class="fas fa-thumbtack link " style="font-size: 1.5em;"> </span>
              <% end %>
            </li>
            <li>
              <%= link_to user_path(current_user), class:"nav-link" do %>
              <span class="fas fa-user link " style="font-size: 1.5em;"> </span>
              <% end %>
            </li>

            <li>
              <%= link_to notifications_path(current_user), class:"nav-link" do %>
                <% if unchecked_notifications.any? %>
                  <span class="fa-stack">
                    <i class="fas fa-bell link" style="font-size: 1.5em;" ></i>
                    <i class="fas fa-circle n-circle fa-stack-1x" style="font-size: 0.7em;" ></i>
                  </span>
                <% else %>
                  <i class="fas fa-bell link" style="font-size: 1.5em;" ></i>
                <% end %>
              <% end %>
            </li>

            <% elsif admin_signed_in? %>
            <li>
              <%= link_to admins_users_path, class:"nav-link" do %>
              <span class="fas fa-heart link"> ユーザー一覧</span>
              <% end %>
            </li>
            <li>
              <%= link_to root_path, class:"nav-link" do %>
              <span class="fas fa-user link"> Topページへ</span>
              <% end %>
            </li>
            <% end %>
           </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="index-search border-top border-info"><br>
      <p class="text-center">c</p>
      <br>
      </div>
    </footer>
  </body>
</html>
