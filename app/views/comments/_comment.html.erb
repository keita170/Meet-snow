<% student.comments.includes([:user]).each do |comment| %>
 <tr>
    <td><%= link_to comment.user.name, user_path(comment.user), class:"link mr-1" %></td>
    <td><%= comment.comment %></td>
    <td>
     <% if comment.user == current_user %>
      <button type="button" class="btn btn-white btn-sm" data-toggle="collapse" data-target="#demo">▼</button>
      <div id="demo" class="collapse">
      <%= link_to "削除", student_post_comment_path(id: comment.id, student_post_id: student.id), class:"text-danger", method: :delete, remote: true %>
      </div>
     <% end %>
    </td>
 </tr>
 <br>
<% end %>