<table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">状況</th>
            <th scope="col">分野</th>
            <th scope="col">条件</th>
            <th scope="col">コメント数</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% if favorite_list.present? %>
            <% favorite_list.each do |post| %>
          <tr>
              <% if post.status == "受付中" %>
                  <th class="text-primary"><%= post.status %></th>
                <% else %>
                  <th class="text-danger"><%= post.status %></th>
              <% end %>
              <td class="font-weight-bold"><%= post.field %></td>
            <td><%= post.title %></td>
            <td><%= post.comment_teachers.count %></td>
            <td>
                <%= link_to "連絡する", user_path(post.user), class:"btn btn-success btn-sm" %>
            </td>
          </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>