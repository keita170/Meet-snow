
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="index-post-2 card-login d-flex mx-auto justify-content-center align-items-center rounded-pill mt-5 mb-5" style="height:470px; width:520px;">
        <%#= form_with model: @user, url: edit_user_password_path, method: :post, class: 'new_user', local: true do |f| %>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <h2 class="meet_snow font-weight-bold">パスワード再設定用</h2>

        <div class="field mb-3 mt-4">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="actions">
          <%= f.submit "再設定用にメールを送る", class: 'btn btn-primary mx-auto'  %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <p class="text-left">アカウント作成の方は<%= link_to "こちら", new_user_registration_path, class: 'text-decolation' %>から。</p>
    </div>
    <div class="col-md-4 offset-md-2">
      <p class="text-right">アカウント作成済みの方は<%= link_to "こちら", new_user_session_path, class: 'text-decolation' %>から。</p>
    </div>
  </div>
</div>
