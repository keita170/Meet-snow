<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="index-post-2 card-login d-flex mx-auto justify-content-center align-items-center rounded-pill mt-5 mb-5" style="height:470px; width:520px;">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <h2 class="meet_snow font-weight-bold">パスワード変更ページ</h2>

        <div class="field mb-3 mt-4">
          <%= f.label :password, "新しいパスワード" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        </div>

        <div class="field mb-3">
          <%= f.label :password_confirmation, "パスワード確認用" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新しいパスワードを登録する", class: 'btn btn-primary mx-auto'  %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <p class="text-left">アカウント作成の方は<%= link_to "こちら", new_user_registration_path, class: 'text-decolation' %>から。</p>
    </div>
    <div class="col-md-4 offset-md-2">
      <p class="text-right">アカウント作成済みの方は<%= link_to "こちら", new_user_session_path, class: 'text-decolation' %>から。</p>
    </div>
  </div>
</div>
